#news-block.clearfix
  #announcement-carousel{ :class => "carousel slide", :data => {'ride' => "carousel"}}
    %ol{ :class => "carousel-indicators"}
      %li{ :data => {'target' => '#announcement-carousel','slide-to' => "0"}, :class => "active" }
      %li{ :data => {'target' => '#announcement-carousel','slide-to' => "1" }}
      %li{ :data => {'target' => '#announcement-carousel','slide-to' => "2" }}
    .carousel-inner
      .item.active
        %a{:href => "#{@site.carousel_one_href}"}
          #announcement{ :style => "background-image: url('#{@site.default_carousel_one_image.url}')", :title => "#{@site.carousel_one_title}"}
      .item
        %a{:href => "#{@site.carousel_two_href}"}
          #announcement{ :style => "background-image: url('#{@site.default_carousel_two_image.url}');", :title => "#{@site.carousel_two_title}"}
      .item
        %a{:href => "#{@site.carousel_three_href}"}
          #announcement{ :style => "background-image: url('#{@site.default_carousel_three_image.url}')", :title => "#{@site.carousel_three_title}"}
    %a{:class => "left carousel-control", :href => "#announcement-carousel", :data => {'slide' => "prev"}}
      %span{:class => "glyphicon glyphicon-chevron-left"}
    %a{:class => "right carousel-control", :href => "#announcement-carousel", :data => {'slide' => "next"}}
      %span{:class => "glyphicon glyphicon-chevron-right"} 

  .events
    #showing.event-block{ :style => "background-image: url('#{@showing_image}'); background-size: cover; background-position: center;" }
      .event-content
        .event-details-top
          .event-type
            %h4 NEXT SHOWING:
          .event-date
            - if @showing_date.is_a?(String)
              %h5= @showing_date
            - else
              %h5= "#{@showing_date.strftime('%^a %m/%d/%y')}"
        .event-content-wrapper
          .event-details
            %h5= "#{@showing_start_time.strftime('%l:%M %p')}-#{@showing_end_time.strftime('%l:%M %p')} @ #{@showing_location}"
          .event-title
            %h3= @showing_title
    #social.event-block{ :style => "background-image: url('#{@social_image}'); background-size: cover; background-position: center;" }
      .event-content
        .event-details-top
          .event-type
            %h4 NEXT MANGA SOCIAL:
          .event-date
            - if @social_date.is_a?(String)
              %h5= @social_date
            - else
              %h5= "#{@social_date.strftime('%^a %m/%d/%y')}"
        .event-content-wrapper
          .event-details
            %h5= "#{@social_start_time.strftime('%l:%M %p')}-#{@social_end_time.strftime('%l:%M %p')} @ #{@social_location}"
          .event-title
            %h3= @social_title
    #game-night.event-block{ :style => "background-image: url('#{@game_night_image}'); background-size: cover; background-position: center;" }
      .event-content
        .event-details-top
          .event-type
            %h4 NEXT GAME NIGHT:
          .event-date
            - if @game_night_date.is_a?(String)
              %h5= @game_night_date
            - else
