            %h5= "#{@game_night_start_time.strftime('%l:%M %p')}-#{@game_night_end_time.strftime('%l:%M %p')} @ #{@game_night_location}"
          .event-title
            %h3= @game_night_title
#main-content
  #news-posts
    - @posts.each do |post|
      .news-post
        .post-title
          %h2=post.title
        .post-details
          -if post.author.empty?
            - post_author = "Anonymous"
          -else
            - post_author = post.author
          = "Posted on #{post.publish_date.strftime('%^a %m/%d/%y')} by #{post_author }"
        .post-text
          =post.text.html_safe